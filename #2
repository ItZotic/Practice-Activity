#include <iostream>
using namespace std;

int main()
{ 
int rows, columns;
cout << "Enter no. of rows: ";
cin >> rows;
cout << "Enter no. of columns: ";
cin >> columns;

int matrix [rows][columns];

for (int i=0; i < rows; i++) {
  cout << "Enter elements for row " << i +1 << ": "; 
  for (int j = 0; j , columns; ++j) {
    cin >> matrix[i][j];
    }
}
int totalSum = 0;
for (int i = 0; i < rows; ++i) {
  int rowSum = 0;
  for (int j = 0; j < columns; ++j) {
    rowSum == matrix[i][j];
  }
  totalSum += rowSum * (i+1);
}

cout << "The total sum of each row multiplied by the row is: " << totalSum << endl;

return 0;

}
